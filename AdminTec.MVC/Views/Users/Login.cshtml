@using System.Web.Optimization;
@model AdminTec.MVC.Models.UserViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=10">
    <title>Login | AdminTech</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.6 -->
    <link rel="stylesheet" href="~/Content/bootstrap.min.css">
    <!--# Font Awesome -->
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css"> -->
    <link rel="stylesheet" href="~/Content/font-awesome.min.css">
    <!--# Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/AdminLTE.min.css">

    <link rel="stylesheet" href="~/Content/Site.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Content/iCheck/square/blue.css">
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <div class="login-logo">
            <b>Admin</b>Tech
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body">
            <p class="login-box-msg">Inicie Sesión para comenzar</p>

            @using (Html.BeginForm("Login", "Users", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { /* @class = "" */ }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary()
                @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                <div class="form-group has-feedback">
                    @Html.TextBoxFor(x => x.UserName, htmlAttributes: new { @class = "form-control", placeholder = "Usuario" })
                    @*<input type="text" class="form-control" id="UserName" name="UserName" placeholder="Usuario">*@
                    <span class="glyphicon glyphicon-user form-control-feedback"></span>
                </div>

                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                <div class="form-group has-feedback">
                    @Html.PasswordFor(x => x.Password, htmlAttributes: new { @class = "form-control", placeholder = "Clave" })
                    <span class="glyphicon glyphicon-lock  form-control-feedback"></span>
                </div>
                <div class="row">
                    <div class="col-xs-6">
                        <div class="checkbox icheck">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-xs-6">
                        <button type="submit" class="btn btn-primary btn-block btn-flat">Iniciar Sesion</button>
                    </div>
                    <!-- /.col -->
                </div>
            }
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 2.2.3 -->
    <script src="~/Scripts/jquery-2.2.3.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Scripts/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '10%' // optional
            });
        });
    </script>
    @Scripts.Render("~/bundles/jqueryval")
</body>
</html>